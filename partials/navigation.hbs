{{#if isSecondary}}
    <!-- secondary navigation -->
    <ul class="icons">
        {{#foreach navigation}}
            <li>
                <a href="{{url}}" class="icon fa-{{slug}}" title="{{slug}}">
                    <span class="label">{{slug}}</span>
                </a>
            </li>
        {{/foreach}}
    </ul>
{{else}}
<nav id="menu">
    <header class="major">
        <h2>Menu</h2>
    </header>
    <ul class="links">
        {{#foreach navigation}}
        <li class="nav-{{slug}} {{#if current}}active{{/if}}"><a href="{{url absolute="true"}}">{{label}}</a></li>
        {{/foreach}}
    </ul>
</nav>
{{/if}}