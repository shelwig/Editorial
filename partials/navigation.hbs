<nav id="menu">
    <header class="major">
        <h2>Menu</h2>
    </header>
    {{#if isSecondary}}
       <!-- secondary navigation -->
        <ul class="nav">
            {{#foreach navigation}}
                <li class="nav-{{slug}}">
                    <a href="{{url}}" class="social-link">
                        <svg width="16" height="16" role="img" aria-label="{{slug}} icon">
                            <use xlink:href="#{{slug}}"></use>
                        </svg>
                    </a>
                </li>
            {{/foreach}}
        </ul>
    {{/if}}
    <ul class="links">
        {{#foreach navigation}}
        <li class="nav-{{slug}} {{#if current}}active{{/if}}"><a href="{{url absolute="true"}}">{{label}}</a></li>
        {{/foreach}}
    </ul>
</nav>